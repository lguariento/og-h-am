                        <lb n="1" style="text-direction:up"/><w lemma="maqqas" type="formula">MAQ</w><gap reason="illegible" extent="1" unit="character"/><unclear reason="faded" extent="1" unit="character">D</unclear><gap reason="lost" extent="unknown" unit="character"/>
                    </ab>
