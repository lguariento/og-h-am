            <div type="edition" subtype="roman" xml:space="preserve">
                    <div type="textpart" n="2" xml:lang="pgl-Latn">
                <ab>
                    <lb n="1"/><w lemma="maqqas" type="formula"><supplied reason="lost"><hi rend="ligature">MAC</hi></supplied></w>
                    <lb n="2"/>CVDICCL
                    <lb n="3"/><w type="formula" lemma="filius">FILIVS</w>
                    <lb n="4"/><hi rend="ligature">CA</hi>TIC
                    <lb n="5"/><hi rend="ligature">VV</hi>S
