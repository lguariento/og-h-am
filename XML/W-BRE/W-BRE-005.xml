                        <lb n="1" style="text:direction:down"/><persName><name nymRef="#cunacenas">CVNOCENNI</name> <w>FILIVS</w> 
                        <lb n="2" style="text-direction:down"/><name nymRef="#cunagenas">CVNOGENI</name></persName> <w>HIC</w> <w>IACIT</w>
                    </ab>
