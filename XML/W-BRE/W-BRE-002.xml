                        <lb n="1" style="text-direction:up"/><persName>S<gap reason="lost" extent="unknown" unit="character"/>N<gap reason="lost" extent="unknown" unit="character"/>N<gap reason="lost" extent="unknown" unit="character"/>N</persName>
