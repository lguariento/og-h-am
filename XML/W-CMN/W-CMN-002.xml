                    <div type="textpart" n="2" xml:lang="pgl-Latn">
                <ab>
                    <lb n="1" style="text-direction:down"/><persName><name nymRef="#BIVADIAS">BI<hi rend="ligature">VA</hi>D<hi rend="inverted">I</hi></name>
