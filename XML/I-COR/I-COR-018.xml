                        <origin>
                           <origPlace corresp="#findspot">
                                <placeName type="townland">Ahalisky (<foreign xml:lang="ga"><ref target="https://www.logainm.ie/ga/9071">Achadh Loiscthe</ref></foreign>)</placeName>, <placeName type="county">Co. Cork</placeName>, <placeName type="country">Ireland</placeName>
