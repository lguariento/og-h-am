                <ab>
                    <lb n="1" style="text-direction:down"/><persName><name>BODVOC<hi rend="inverted">I</hi></name> HIC IACIT
                    <lb n="2" style="text-direction:down"/><hi rend="ligature">FI</hi><hi rend="ligature">LI</hi>VS <name>CATOTIGIRNI</name>
                    <lb n="3" style="text-direction:down"/>PRONEPVS <name nymRef="#aeternus">ETERNA<hi rend="ligature">LI</hi></name>
                    <lb n="4" style="text-direction:down"/><name>VEDOMAV<hi rend="inverted">I</hi></name></persName>
                </ab>
                </div>
            </div>
            <!--<div type="apparatus">
