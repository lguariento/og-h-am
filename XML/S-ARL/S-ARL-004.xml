                        <objectDesc>
                            <supportDesc>
                                <support><p>Canmore <ref target="https://canmore.org.uk/site/318854/lochgoilhead-1"><idno type="Canmore">318854</idno></ref></p>
                                    <material>Fine-grained sandstone</material> 
                                    <objectType>Unclassified</objectType>                                     
