                                <support><p><ref target="https://canmore.org.uk/site/9243/ackergill-links">Canmore</ref> <idno type="Canmore">9243</idno></p>
                                    <material type="stone">Caithness flagstone</material> 
                                    <objectType key="monument">Class I Pictish symbol stone</objectType>                                     
                                    <dimensions unit="m">                                         
                                            <height>1.2</height>
                                            <width>0.6</width>
