                                    <material type="stone">Pinkish granite</material> 
                                    <objectType key="monument">Class II cross-slab</objectType>                                     
                                    <dimensions unit="m">                                         
                                            <height>3.01</height>
                                            <width max="0.91" min="0.81">0.91-0.81</width>
