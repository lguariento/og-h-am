                            <supportDesc>
                                <support>
                                    <!--<p><ref target="https://www.archaeology.ie/archaeological-survey-ireland/historic-environment-viewer-application">National Monuments Service</ref> SMR ID : <idno type="SMR"></idno></p>-->
                                   <material type="wood">Yew wood</material> 
                                    <objectType key="portableObject">Weaver’s weft-beater</objectType> 
                                     <dimensions unit="cm" source="SIK2020">                                         
                                            <height>25.50</height>
